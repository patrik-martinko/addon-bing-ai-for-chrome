{
    "manifest_version": 3,
    "name": "Bing AI for Chrome",
    "description": "Removes the limits of Microsoft Colipot / Bing AI (ChatGPT v4) for Google Chrome and other browsers.",
    "version": "1.1.1",
    "permissions": [
        "declarativeNetRequest"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.bing.com/*",
                "https://copilot.microsoft.com/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ],
    "host_permissions": [
        "https://*.bing.com/*",
        "https://copilot.microsoft.com/*"
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "action": {
        "default_icon": "icon-48.png"
    }
}