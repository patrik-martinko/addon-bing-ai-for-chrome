{
    "manifest_version": 2,
    "name": "Bing AI for Brave",
    "description": "Removes the limits of Microsoft Colipot or Bing AI (ChatGPT v4) for Brave browser.",
    "version": "1.1.1",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.bing.com/*",
        "https://copilot.microsoft.com/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.bing.com/*",
                "https://copilot.microsoft.com/*"
            ],
            "js": [
                "script.js"
            ],
            "run_at": "document_start"
        }
    ],
    "icons": {
        "16": "icon-16.png",
        "48": "icon-48.png",
        "128": "icon-128.png"
    },
    "browser_action": {
        "default_icon": "icon-48.png"
    }
}